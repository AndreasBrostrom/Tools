
export EDITOR=nvim
export GIT_EDITOR=nvim

[[ -d ~/Programs/bin      ]] && export PATH=$PATH:~/Programs/bin
[[ -d ~/.scripts          ]] && export PATH=$PATH:~/.scripts
[[ -d ~/.bin              ]] && export PATH=$PATH:~/.bin

# Android
if [ -d ~/.android ]; then
    export ANDROID_HOME=~/.android/Sdk
    export ANDROID_SDK_HOME=~/.android
    export ANDROID_AVD_HOME=~/.android/avd
    export PATH=$PATH:$ANDROID_HOME/tools
    export PATH=$PATH:$ANDROID_HOME/tools/bin
    export PATH=$PATH:$ANDROID_HOME/emulator
    export PATH=$PATH:$ANDROID_HOME/platform-tools
fi

export PATH=$PATH:/snap/bin

[[ -d ~/.yarn/bin         ]] && export PATH=$PATH:~/.yarn/bin
[[ -d ~/.cargo/bin        ]] && export PATH=$PATH:~/.cargo/bin

# JAVA
export JAVA_HOME='/usr/lib/jvm/java-8-openjdk-amd64'

# Variables
export VSCODE_GIT_ASKPASS_NODE=/snap/code/40/usr/share/code/code
export VSCODE_GIT_ASKPASS_MAIN=/snap/code/40/usr/share/code/resources/app/extensions/git/dist/askpass-main.js
