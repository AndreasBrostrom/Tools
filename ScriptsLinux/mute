#!/bin/bash

# Get the default audio sink (output device)
SINK=$(pactl get-default-sink)

# Get current mute state
STATE=$(pactl get-sink-mute "$SINK" | awk '{print $2}')

if [ "$STATE" = "yes" ]; then
    # Currently muted → unmute
    pactl set-sink-mute "$SINK" 0
    echo "Sound unmuted"
else
    # Currently unmuted → mute
    pactl set-sink-mute "$SINK" 1
    echo "Sound muted"
fi
